{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "outDir": "./dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "isolatedModules": false,
      "lib": [
        "es6",
      ],
      "types": [
        "node",
      ],
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "tests"
    ]
}